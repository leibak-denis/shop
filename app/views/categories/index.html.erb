<div class="container">
    <div class="flex flex-row justify-between">
    
        <% @categories.each do |category| %>
            <div class="mt-6 w-1/5 h-40 bg-white p-3 mx-auto mr-3 ml-3 rounded-lg shadow-md flex flex-col justify-between text-center" >
                    <div>
                        <p class="font-bold text-2xl"><%= category.name%></p>
                    </div>
                    
                    <div class="text-center">
                        <%= link_to "Show More",  category_path(category.id) %>
                    </div>
                    
                
            </div>
        <% end %>
    
    </div>
        
    
</div>