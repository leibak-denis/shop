<div class="container">
  <%# ** To know cart info before creating modal cart %>
  <%= debug session[:cart] %>

  <h1 class="font-bold text-3xl uppercase"> Products </h1>

    <% @products.each do |product|%>
      <div class="product-item" >

        <%= render "product", product: product %>

        <div class="flex flex-row  w-2/5 items-center justify-end">
          <%= render "product_form", product: product %>
        </div>
      </div>
    <% end %>
</div>
