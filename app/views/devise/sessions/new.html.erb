<div class="container">

  <div class="w-full mx-auto flex justify-center">

    <div class="w-2/5 mx-auto flex flex-col">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, class:"text-2xl font-bold" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"rounded-lg w-full" %>
      </div>

      <div class="field mt-3">
        <%= f.label :password, class:"text-2xl font-bold " %><br />
        <%= f.password_field :password, autocomplete: "current-password", class:"rounded-lg w-full" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field mt-3">
          <%= f.check_box :remember_me, class:"rounded-lg" %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions mt-3 flex justify-center">
        <%= f.submit "Log in", class:"text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800" %>
      </div>
    <% end %>



    <div class="flex flex-col justify-center w-full text-center mt-3">
      <%= render "devise/shared/links" %>
    </div>
  
  </div>

</div>







